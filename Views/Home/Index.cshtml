@model ClientPoster.Models.MinMax

@{
    ViewData["Title"] = "Home Page";
}


<form asp-action="Index" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Min">Введите минимальное число</label>
            <input asp-for="Min" />
            <span asp-validation-for="Min" />
        </div>
        <div class="form-group">
            <label asp-for="Max">Введите максимальное число</label>
            <input asp-for="Max" />
            <span asp-validation-for="Max" />
        </div>
        <div class="form-group">
            <input type="submit" value="Получить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
<h3>@ViewBag.Message</h3>
<h3>@ViewBag.rnd</h3>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}